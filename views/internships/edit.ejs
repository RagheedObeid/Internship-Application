<%- include("../partials/header") %>
<%- include("../partials/nav") %>
<div class="container">
	<div class="row">
		<h1 class="text-center">
	Edit <%= intern.name %>
</h1>
	<div style="margin: 30px auto; width: 30%; ">
		<form action="/internships/id=<%= intern._id %>?_method=put" method="post">
			<div class="form-group">
				<input class="form-control" name="intern[name]" type="text" value="<%= intern.name %>">
			</div>
	<div class="form-group">
				<input class="form-control" name="intern[image]" type="text" value="<%= intern.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" name="intern[price]" type="number" value="<%= intern.price %>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" name="intern[description]" type="text" value="<%= intern.description %>">
			</div>
	<div class="form-group">
				<input class="btn btn-info btn-lg btn-block" type="submit">
			</div>
</form>
		<a href="/internships">Back to the internships</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>